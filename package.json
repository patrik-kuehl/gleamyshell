{
    "private": true,
    "scripts": {
        "format": "prettier --write . && gleam format",
        "test-on-erlang": "gleam test",
        "test-on-nodejs": "gleam test --target javascript",
        "test-on-deno": "gleam test --target javascript --runtime deno",
        "test": "npm run test-on-erlang && npm run test-on-nodejs && npm run test-on-deno",
        "check": "prettier --check . && gleam format --check src test",
        "update-changelog": "git-cliff --unreleased --prepend CHANGELOG.md",
        "commit-changelog": "git add CHANGELOG.md && git commit -m \"docs(changelog): update changelog\"",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "git-cliff": "2.2.2",
        "husky": "9.0.11",
        "prettier": "3.2.5"
    }
}
